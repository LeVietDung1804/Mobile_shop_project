   <%- include('./layout/head', {title: "Home"}) %>
   <%- include('./layout/header') %>
   <%- include('./layout/menu') %>
   <%- include('./layout/slider') %>


   <!--	Feature Product	-->
   <div class="products">
      <h3>Sản phẩm nổi bật</h3>
      <div class="product-list card-deck">
         <% for (let featured of featuredProducts) { %>
            <div class="product-item card text-center">
                <a href="/product-<%= featured.slug %>.<%= featured._id %>"><img src="/static/images/<%= featured.thumbnail %>"></a>
                <h4><a href="/product-<%= featured.slug %>.<%= featured._id %>"><%= featured.name %></a></h4>
                <p>Giá Bán: <span><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(featured.price) %></span></p>
             </div>
         <% } %>
      </div>
   </div>
   <!--	End Feature Product	-->

   <!--	Latest Product	-->
   <div class="products">
      <h3>Sản phẩm mới</h3>
      <div class="product-list card-deck">
        <% for (let lastest of lastestProducts) { %>
            <div class="product-item card text-center">
                <a href="/product-<%= lastest.slug %>.<%= lastest._id %>"><img src="/static/images/<%= lastest.thumbnail %>"></a>
                <h4><a href="/product-<%= lastest.slug %>.<%= lastest._id %>"><%= lastest.name %></a></h4>
                <p>Giá Bán: <span><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(lastest.price) %></span></p>
             </div>
         <% } %>
      </div>
   </div>
   <!--	End Latest Product	-->
